@{
    Layout = "../razor-layout.cshtml";
}
@using Alipig.Framework.Util
<div>
	<ul class="breadcrumb">
		<li>
			<a href="#">主页</a> <span class="divider">/</span>
		</li>
		<li>
			<a href="#">管理网站</a> <span class="divider">/</span>
		</li>
		<li>
			<a href="#">网站列表</a>
		</li>
	</ul>
</div>

						<table class="table table-striped table-bordered bootstrap-datatable datatable">
						  <thead>
							  <tr>
								  <th>网站名称</th>
								  <th>描述</th>
								  <th>域名管理</th>
								  <th>管理权限</th>
								  <th>管理角色</th>
								  <th>操作</th>
							  </tr>
						  </thead>   
						  <tbody>
                              @foreach (var item in Model)
                              {
							    <tr>
							    	<td>@item.SiteName</td>
							    	<td class="center">@item.Description</td>
							    	<td class="center">
							    		<a class="btn btn-mini btn-success" href="/site/editdomain/@item.AutoId">
							    			<i class="icon-zoom-in icon-white"></i>管理域名                                           
							    		</a>
							    	</td>
							    	<td class="center">
							    		<a class="btn btn-mini btn-success" href="/permission/list?siteId=@item.ID">
							    			<i class="icon-zoom-in icon-white"></i>管理权限                                           
							    		</a>
							    	</td>
							    	<td class="center">
						                <p class="btn-group">
						                	  <a href="/role/list?siteId=@item.ID" class="btn btn-mini">管理角色</a>
						                	  <button class="btn btn-mini">编辑角色权限</button>
						                </p>
                                    </td>
							    	<td class="center">
							    		<a class="btn btn-mini btn-info" href="/site/edit/@item.AutoId">
							    			<i class="icon-edit icon-white"></i>  
							    			修改                                        
							    		</a>
							    		<a class="btn btn-mini btn-danger confirm" title="确定要删除吗?" href="/site/delete/@item.AutoId">
							    			<i class="icon-trash icon-white"></i> 
							    			删除
							    		</a>
							    	</td>
							    </tr>
                                  
                              }
						  </tbody>
					  </table>          